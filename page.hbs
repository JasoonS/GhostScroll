{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
    <header id="site-head" {{#if @blog.cover}}style="background-image: url(/content/images/page_cover.jpg)"{{/if}}>
        <div class="vertical">
        <div id="site-head-content" class="inner">
    <a id="blog-logo" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img src="{{@blog.logo}}" alt="Back to home" />
                {{else}}
                    {{@blog.title}}
                {{/if}}
            </a>
        <h1 class="blog-title">{{post.title}}</h1>
        <h2 class="blog-description">{{@blog.description}}</h2>
        <a class='btn first'>read</a>
            <a class='btn' href="{{@blog.url}}">home</a>
            </div>
            <a class="fa fa-chevron-down" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
                </div>
    
    </header>
<main id="content" class="content" role="main">

        <article class="{{post_class}} first">

        {{! Each post has the blog logo at the top, with a link back to the home page }}

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        {{! Everything below outputs content of the the post which has been published }}

		<span class="post-meta"><i class="fa fa-leaf"></i> {{title}} <i class="fa fa-calendar-o"></i> <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{#if tags}} <i class="fa fa-tag"></i> {{tags separator=", "}}{{/if}} </span>

        <section class="post-content">
            {{content}}	
        </section>

        {{/post}}

    </article>

</main>
