        <i class="fa fa-square-o fa-stack-2x"></i>
	<i class="fa fa-twitter fa-stack-1x"></i>
      </span></a>
      <a class="social" href="https://facebook.com/your_link"><span class="fa-stack fa-lg">
	<i class="fa fa-square-o fa-stack-2x"></i>
	<i class="fa fa-facebook fa-stack-1x"></i>
      </span></a> -->
      <a class="social" href="mailto:albi@twelvepurplepills.com"><span class="fa-stack fa-lg">
	<i class="fa fa-square-o fa-stack-2x"></i>
	<i class="fa fa-comments fa-stack-1x"></i>
      </span></a>
      <a id="totop-arrow"><span class="fa-stack fa-lg">
	<i class="fa fa-square-o fa-stack-2x"></i>
	<i class="fa fa-angle-up fa-stack-1x"></i>
      </span></a>
    </div>

    {{! Each post will be output using this markup }}
    {{#foreach posts}}
    <div class='post-holder'>
        
            {{#if @first}}
                <article id="{{id}}" class="{{post_class}} first">
            {{else}}
                {{#if @last}}
                    <article id="{{id}}" class="{{post_class}} last" >
                {{else}}
                    <article id="{{id}}" class="{{post_class}}">
                {{/if}}
            {{/if}}
        
            <header class="post-header">
                
                <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>

            </header>
            <span class="post-meta"><i class="fa fa-calendar-o"></i> <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{#if tags}} <i class="fa fa-tag"></i> {{tags separator=", "}}{{/if}} <i class="fa fa-comments-o"></i> <a href="{{url}}#disqus_thread">Comments</a> </span>
            <section class="post-content">
                 {{#if tags}}
                    <p class="post-description">{{content characters="650"}} <a href="{{url}}">&hellip;leggi <i class="fa fa-paperclip"></i></a></p>
                {{else}}
                    <p class="post-description">{{content characters="9999999999999"}}</p>
                {{/if}}
            </section>
            
             {{#if tags}}
             <section class="share"> <br>
                <h4> <i class="fa fa-thumbs-o-up"></i>Share!</h4>
                <a class="icon-twitter" href="http://twitter.com/share?text={{title}}&url={{@blog.url}}{{url}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="hidden">Twitter</span>
                </a>
                <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{@blog.url}}{{url}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="hidden">Facebook</span>
                </a>
                <a class="icon-google-plus" href="https://plus.google.com/share?url={{@blog.url}}{{url}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="hidden">Google+</span>
                </a>
            </section>
            {{/if}}
        </article>
        <div class='post-after'></div>
    </div>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    

</main>
