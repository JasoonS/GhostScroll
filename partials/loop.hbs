{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
    <div class='post-holder'>
        
            {{#if @first}}
                <article id="{{id}}" class="{{post_class}} first">
            {{else}}
                {{#if @last}}
                    <article id="{{id}}" class="{{post_class}} last" >
                {{else}}
                    <article id="{{id}}" class="{{post_class}}">
                {{/if}}
            {{/if}}
        
            <header class="post-header">
                
                <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>

            </header>
            <span class="post-meta"><i class="fa fa-calendar-o"></i> <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{#if tags}} <i class="fa fa-tag"></i> {{tags separator=", "}}{{/if}} <i class="fa fa-comments-o"></i> <a href="{{url}}#disqus_thread">Comments</a> </span>
            <section class="post-content">
                 {{#if tags}}
                    <p class="post-description">{{content characters="700"}} <a class='btn' href="{{url}}" >read more &raquo;</a>
                <a class='btn' href="https://www.facebook.com/sharer/sharer.php?u={{@blog.url}}{{url}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <i class="fa fa-facebook"></i><span class="hidden">Facebook</span>
                </a>
                <a class='btn' href="http://twitter.com/share?text={{title}}&url={{@blog.url}}{{url}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <i class="fa fa-twitter"></i><span class="hidden">Twitter</span>
                </a>
                <a class='btn' href="https://plus.google.com/share?url={{@blog.url}}{{url}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <i class="fa fa-google-plus"></i><span class="hidden">Google+</span>
                </a>
                    </p>
                {{else}}
                    <p class="post-description">{{content characters="9999999999999"}}</p>
                {{/if}}
            </section>
            
        </article>
        <div class='post-after'></div>
    </div>

    {{/foreach}}

