{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
    <header id="site-head" {{#if @blog.cover}}style="background-image: url(/content/images/post_cover.jpg)"{{/if}}>
        <div class="vertical">
        <div id="site-head-content" class="inner">
    <a id="blog-logo" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img src="{{@blog.logo}}" alt="Back to home" />
                {{else}}
                    {{@blog.title}}
                {{/if}}
            </a>
        <h1 class="blog-title">{{post.title}}</h1>
        <a class='btn first'>to the Post!</a>
            <a class='btn' href="#disqus_thread">to comments!</a>
            <span id="search">
        <form>
    <i class="fa fa-tags"></i>  <input class="post-meta" id="search-field" placeholder=" Cerca una pillola..." />
        </form>
        </span>
        <div id="results"></div>
        <span class="post-meta"> <i class="fa fa-angle-down"></i> scroll down <i class="fa fa-angle-down"></i> </span>
            </div>
                </div>
    
    </header>
<main class="content" role="main">

        <article class="{{post_class}} first">

        {{! Each post has the blog logo at the top, with a link back to the home page }}

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        {{! Everything below outputs content of the the post which has been published }}

		<span class="post-meta"><i class="fa fa-leaf"></i> {{title}} <i class="fa fa-calendar-o"></i> <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{#if tags}} <i class="fa fa-tag"></i> {{tags separator=", "}}{{/if}} </span>

        <section class="post-content">
            {{content}}	
        </section>

        {{/post}}
        <span class="post-meta"><i class="fa fa-leaf"> commenta</i> {{post.title}}</span>
          <div id="disqus_thread"></div>

    </article>

</main>
